@model AarhusWebDevCoop.ViewModels.ContactForm
@{
    Layout = null;
}

    @if (TempData["success"] == null)
    {
        using (Html.BeginUmbracoForm("HandleFormSubmit", "ContactFormSurface", new object { },
                                        new { @class = "form-horizontal" }))
        {
            <div class="column is-6 is-offset-3">
                <div class="field">
                    @Html.LabelFor(m => m.Name, new { @class = "label" })
        
                        @Html.TextBoxFor(m => m.Name, new { @class = "input", placeholder = "Name" })
                        @Html.ValidationMessageFor(m => m.Name, String.Empty, new { @class = "error" })
            
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Email, new { @class = "label" })
                  
                        @Html.TextBoxFor(m => m.Email, new { @class = "input", placeholder = "Email address" })
                        @Html.ValidationMessageFor(m => m.Email, String.Empty, new { @class = "error" })
            
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Subject, new { @class = "label" })
              
                        @Html.TextBoxFor(m => m.Subject, new { @class = "input", placeholder = "Subject" })
                        @Html.ValidationMessageFor(m => m.Subject, String.Empty, new { @class = "error" })
             
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Message, new { @class = "label" })
           
                        @Html.TextAreaFor(m => m.Message, new { @class = "textarea", placeholder = "Your message" , rows = 5 })
                        @Html.ValidationMessageFor(m => m.Message, String.Empty, new { @class = "error" })
                
                </div>
                <div class="field">
        
                        <button id="contact-submit" type="submit" class="button is-primary">Submit</button>
                  
                </div>
            </div>
        }
    }
    else
    {
        <h1 class="heading">Thank you for contacting us. We’ll be in touch soon!</h1>
    }
