@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ArticlesOverview>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
}

<div class="column">
    <div class="card">
     
        <div class="card-content">
            <div class="media">
                <div class="media-content">
                    <p class="title is-4">@Umbraco.Field("articlesTitle")</p>
                </div>
            </div>

            <div class="content">
                @Umbraco.Field("articlesBodyText")
            </div>
        </div>
    </div>
</div>